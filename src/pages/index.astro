    <style>
      img {
        display: block;
        max-width: 100%;
        /* max-height: 100%; */
        height: auto;
        /* border: 5px solid var(--clr-neutral-dark); */
        /* box-shadow: 8px 8px 0 0 red; */
        /* box-shadow: clamp(8px, 1vw, 15px) clamp(8px, 1vw, 15px) 0 0 */
        /*   rgba(140, 174, 182, 0.25); */
        /* margin-block: 0.5rem; */
      }
      a {
        text-decoration: none;
      }
      section {
        min-height: 100dvh;
      }
      section > div {
      }
      h5 {
        font-weight: 300;
      }
      .hero {
        min-height: revert;
        height: calc(100dvh - var(--header-height));
        position: relative;
        z-index: 1;
        display: grid;
        place-content: center;
        grid-template-rows: 1fr 1fr 1fr;
        --circle-size: clamp(200px, 35vw, 750px);
        --blur: clamp(30px, calc(10px + 2vw), 120px);
        overflow: hidden;
        isolation: isolate;
      }
      .content h2 {
        font-size: clamp(3.062rem, 6vw, 8rem);
      }
      .next {
        align-self: end;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        font-size: 1.5rem;
        z-index: 4;
        font-weight: 500;
        color: var(--clr-neutral-dark);
      }
      .next a {
        display: grid;
        place-content: center;
      }
      .next a:hover path {
        fill: var(--clr-accent-darker);
      }
      .next a:hover {
        color: var(--clr-accent-darker);
      }
      .next a svg {
        justify-self: center;
      }
      .next svg {
        display: block;
      }
      h4 {
        font-weight: 400;
        font-size: clamp(1.25rem, 2vw, 1.75rem);
        /* margin-block: 0.5rem; */
      }
      .content {
        padding: 1rem;
        z-index: 4;
        mix-blend-mode: color-burn;
      }
      .content > * {
        margin-block: 0.2rem;
      }
      svg {
        width: clamp(32px, 5vw, 50px);
        height: clamp(32px, 5vw, 50px);
      }
      svg path {
        transition: 0.2s;
      }
      .content a:hover svg path {
        fill: var(--clr-secondary-darker);
      }

      .hero::after {
        content: "";
        inset: 0;
        z-index: 3;
        position: absolute;
        background-image: url("/grain.svg");
        opacity: 0.5;
        pointer-events: none;
      }

      #projects {
        display: grid;
        grid-template-rows: auto 1fr auto;
        padding: clamp(0.85rem, 2vw, 2rem);
        margin: 0 auto;
        max-width: 1450px;
      }

      #about-me {
        position: relative;
        display: grid;
        place-content: center;
      }
      #about-me > * {
        z-index: 1;
        color: var(--clr-neutral-light);
      }

      #about-me::before {
        content: "";
        position: absolute;
        inset: 0;
        height: 100%;
        width: 100%;
        background: var(--clr-secondary-darker);
        mix-blend-mode: multiply;
        /* opacity: 0.8; */
      }

      .about {
        display: grid;
        padding: clamp(0.5rem, 1vw, 2rem);
        max-width: 60ch;
      }
      .color-red {
        inset: 22% 43%;
        position: absolute;
        height: var(--circle-size);
        width: var(--circle-size);
        background: var(--clr-accent);
        border-radius: 50%;
        filter: blur(var(--blur));
        z-index: 2;
      }

      .color-blue {
        inset: 32% 8%;
        position: absolute;
        height: var(--circle-size);
        width: var(--circle-size);
        background: var(--clr-secondary);
        border-radius: 50%;
        filter: blur(var(--blur));
        z-index: 2;
      }

      .top-button {
        z-index: 4;
        position: sticky;
        bottom: 4rem;
        text-decoration: none;
        padding: 10px;
        font-family: sans-serif;
        color: #fff;
        background: #000;
        border-radius: 100px;
      }
      .btn-container {
        display: flex;
        justify-content: flex-end;
      }
      .card-container {
        margin-top: 1rem;
        display: grid;
        place-content: center;

        gap: 3rem;
      }
      .card {
        /* overflow: hidden; */
        display: grid;
        background: var(--clr-neutral-light);
        border: 2px solid var(--clr-neutral-dark);
        box-shadow: clamp(8px, 1vw, 15px) clamp(8px, 1vw, 15px) 0 0
          rgba(140, 174, 182, 0.85);
        grid-template-columns: 1fr;
        grid-template-areas:
          "image"
          "content"
          "sidebar";
        /* aspect-ratio: 9/10; */
      }
      .card-img {
        grid-area: image;
      }
      .card img {
        width: 100%;
        border-bottom: 1px solid var(--clr-neutral-dark);
      }
      .card-sidebar {
        display: flex;
        background: var(--clr-neutral-dark);
        color: var(--clr-neutral-light);
        grid-area: sidebar;
      }
      .card-content {
        padding: clamp(0.5rem, 1vw, 2rem);
        grid-area: content;
      }
      .tags {
        display: flex;
        gap: 0.75rem;
        margin-block: 0.5rem;
      }

      @media (min-width: 768px) {
        .card {
          grid-template-areas:
            "image sidebar"
            "content sidebar";
          grid-template-columns: 1fr 60px;
        }
        .card-container {
          /* grid-auto-flow: column; */
        }
      }
    </style>
    <div class="btn-container">
      <a href="#" class="top-button">Top â†‘</a>
    </div>
  </body>
</html>
